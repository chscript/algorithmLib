{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "target": "esnext",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": false,
        "removeComments": true,
        "esModuleInterop": true,
        "lib": [
            "esnext",
        ],
    },
    "include": [
        "index.ts",
        "packages/*/index.ts",
        "packages/*/src",
    ],
    "exclude": [
        "packages/*/__tests__",
    ],
}